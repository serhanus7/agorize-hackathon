<p id="notice"><%= notice %></p>

<h1>Skills</h1>

<table border="1">
  <thead>
    <tr>
      <th>ID</th>
      <th>NAME</th>
      <th>PARENT</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @skills.each do |skill| %>
      <tr>
        <td><%= skill.id %></td>
        <td><%= skill.name %></td>
        <td><%= Skill.find(skill.parent_id).name if skill.parent_id %></td>
        <td><%= link_to 'Show', skill %></td>
        <td><%= link_to 'Edit', edit_skill_path(skill) %></td>
        <td><%= link_to 'Destroy', skill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

